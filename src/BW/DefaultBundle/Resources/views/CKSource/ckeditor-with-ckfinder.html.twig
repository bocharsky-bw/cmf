<script src="{{ asset('bower_components/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('libs/ckfinder/ckfinder.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function(){
        var ckeditor = [];
        var ckfinder = [];
        $('textarea.ckeditor').each(function(){
            var id = $(this).attr('id'); // Get ID of current field
            // Instantiating CKEditor
            ckeditor[id] = $(this).ckeditor();
            ckeditor[id].editor.config.allowedContent = true;
//            CKEDITOR.config.allowedContent = true;
            // Instantiating CKFinder with bind to CKEditor instance
            ckfinder[id] = CKFinder.setupCKEditor(ckeditor[id].editor, '{{ asset('libs/ckfinder/') }}');
        });
    });
</script>
