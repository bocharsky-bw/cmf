{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block description %}{{ post.metaDescription }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {{ service('bw_breadcrumbs.widget').generateFromPost(post)|raw }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                {{ service('bw_blog.widget').lastPosts()|raw }}
            </div>
            <div class="col-lg-9">
                <h1>{{ post.heading }}</h1>
                <div>{{ post.content|raw }}</div>
            </div>
        </div>
    </div>
{% endblock %}