{{ form_start(form) }}
    {{ form_errors(form) }}

    <ul class="list-inline">
        {% include 'BWSkeletonBundle:Form:control-button-list.html.twig' %}
        <li>
            <a class="btn btn-default fas fa-ban" href="{{ path('user') }}" title="Отменить несохраненные изменения"> Закрыть</a>
        </li>
    </ul>

    <div class="form-inline">
        <div class="form-group">{{ form_row(form.enabled) }}</div>&nbsp;
        <div class="form-group">{{ form_row(form.confirmed) }}</div>&nbsp;
    </div>

    <div class="form-group">{{ form_row(form.username) }}</div>
    <div class="form-group">{{ form_row(form.password) }}</div>
    <div class="form-group">{{ form_row(form.email) }}</div>
    <div class="form-group">{{ form_row(form.roles) }}</div>
    <div class="form-group">{{ form_row(form.created) }}</div>

    <h2><i class="fa fa-share-alt"></i> Социальные сети</h2>
    <div class="form-group">{{ form_row(form.facebookId) }}</div>
    <div class="form-group">{{ form_row(form.googleId) }}</div>
    <div class="form-group">{{ form_row(form.vkId) }}</div>

{{ form_end(form) }}
