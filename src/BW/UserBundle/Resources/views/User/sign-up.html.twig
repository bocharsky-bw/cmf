{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content_wrap -%}
    <div class="col-lg-6 col-lg-offset-3">
        <h1>Регистрация</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.username) }}
            </div>

            <div class="form-group">
                {{ form_row(form.email) }}
            </div>

            <div class="form-group">
                {{ form_row(form.password) }}
            </div>

            <div class="form-group">
                {{ form_row(form.register) }}
            </div>
        {{ form_end(form) }}

        <div>
            <p>
                Или <a href="{{ path('user_sign_in') }}">авторизоваться</a> как уже зарегистрированый пользователь.
            </p>
        </div>
    </div>
{% endblock %}
