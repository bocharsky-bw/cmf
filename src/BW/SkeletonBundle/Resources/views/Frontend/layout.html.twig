{% extends "BWSkeletonBundle:Frontend:base.html.twig" %}

{% block lang %}ru{% endblock %}

{% block charset %}utf-8{% endblock %}

{% block title %}% Layout Template %{% endblock %}

{% block description %}{% endblock %}

{% block css %}
    <!-- % CSS % -->
    {# less stylesheet
    {% stylesheets filter='less' output='cache/bootstrap.css' %}
        <link href="{{ asset('libs/bootstrap-3.1.1/less/bootstrap.less') }}" type="text/css" rel="stylesheet/less">
    {% endstylesheets %}
    #}
    <link href="{{ asset('libs/bootstrap-3.1.1/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block js %}
    <!-- % JS % -->
    {# less compiler
    <script src="{{ asset('js/less-1.7.0.min.js') }}" type="text/javascript"></script>
    #}
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
{% endblock %}

{% block header %}
    <header id="header">
        {% block header_wrap %}
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-default" role="navigation">
                            <div class="container-fluid">
                                <!-- Brand and toggle get grouped for better mobile display -->
                                <div class="navbar-header">
                                    <a class="navbar-brand" href="{{ path('home') }}">Home</a>
                                </div>

                                <!-- Collect the nav links, forms, and other content for toggling -->
                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                    <ul class="nav navbar-nav">
                                        <li>
                                            <a href="{{ path('about') }}">About</a>
                                        </li>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-right">
                                        {% if app.user %}
                                            <li>
                                                <a href="{{ path('profile_edit') }}" title="Edit profile">Hello, <b>{{ app.user.profile
                                                    ? (app.user.profile.name
                                                        ? app.user.profile.name
                                                        : app.user.username)
                                                    : app.user.username
                                                }}</b></a>
                                            </li>
                                            <li>
                                                <a href="{{ path('user_sign_out') }}">Sign out</a>
                                            </li>
                                        {% else %}
                                            <li>
                                                <a href="{{ path('user_sign_in') }}">Sign in</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('user_sign_up') }}">Sign up</a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </div><!-- /.navbar-collapse -->
                            </div><!-- /.container-fluid -->
                        </nav>
                    </div>
                </div>
            </div>
        {% endblock %}
    </header>
{% endblock %}

{% block pre_content %}
    <div id="pre_content">
        {% block pre_content_wrap %}
        {% endblock %}
    </div>
{% endblock %}

{% block flash_message %}
    {% if app.session.flashbag.all %}
        {% block flash_message_wrap %}
            <div id="flash_message">
                {% for status, flashMessages in app.session.flashbag.all %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-dismissable alert-{{ status }} fade in">
                            {{ flashMessage|raw }}
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endblock %}
    {% endif %}
{% endblock %}

{% block content %}
    <section id="section">
        {% block content_wrap %}
        {% endblock %}
    </section>
{% endblock %}

{% block post_content %}
    <div id="post_content">
        {% block post_content_wrap %}
        {% endblock %}
    </div>
{% endblock %}

{% block footer %}
    <footer id="footer">
        {% block footer_wrap %}
        {% endblock %}
    </footer>
{% endblock %}

{% block overflow %}
    <div id="overflow">
        {% block overflow_wrap %}
        {% endblock %}
    </div>
{% endblock %}